---
import { SEO } from "astro-seo";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <SEO
      title={title}
      charset="UTF-8"
      description="Khalypso est une entreprise individuelle de développement logiciel et web située à Cergy."
      extend={{
        link: [{ rel: "icon", type: "image/svg+xml", href: "/favicon.svg" }],
        meta: [
          {
            name: "viewport",
            content: "width=device-width",
          },
          {
            name: "generator",
            content: Astro.generator,
          },
        ],
      }}
    />
  </head>
  <body>
    <slot />
  </body>
</html>
