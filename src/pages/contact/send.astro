---
import Layout from "~/layouts/Layout.astro";
import { getHomePermalink } from "~/utils/permalinks";

const title = "Message envoyé";
---

<Layout metadata={{ title }}>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-bold text-5xl">
          <span class="text-accent">C'est parti !</span>
        </h2>
        <p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">Merci pour votre message !</p>
        <a rel="noopener noreferrer" href={getHomePermalink()} class="btn ml-4">Retour à l'accueil</a>
      </div>
    </div>
  </section>
</Layout>
