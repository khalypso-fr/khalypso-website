---
import Hero from "~/components/ui/Hero.astro";
import Layout from "~/layouts/PageLayout.astro";
import image from "~/assets/images/astronaut-8785566_1920.png";

const metadata = {
  title: "Accueil",
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="Editeur de logiciel web et mobile"
    image={{
      src: image,
      alt: "Illustration",
    }}
  >
    <Fragment slot="title">
      Digitalisez votre entreprise avec <span class="text-accent highlight"
        >Khalypso</span
      >
    </Fragment>
    <Fragment slot="content">
      Innovons ensemble : des solutions logicielles <span class="font-semibold"
        >sur mesure</span
      > pour propulser votre entreprise vers l'avenir.
    </Fragment>
  </Hero>
</Layout>
