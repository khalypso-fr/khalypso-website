---
import Hero from "~/components/ui/Hero.astro";
import Layout from "~/layouts/PageLayout.astro";

const metadata = {
  title: "Accueil",
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="Editeur de logiciel web et mobile"
    image={{
      src: "https://images.unsplash.com/photo-1580481072645-022f9a6dbf27?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80",
      alt: "Illustration",
      loading: "eager",
      inferSize: true,
    }}
  >
    <Fragment slot="title">
      Digitalisez votre entreprise avec <span class="text-accent highlight"
        >Khalypso</span
      >
    </Fragment>
    <Fragment slot="content">
      Innovons ensemble : des solutions logicielles <span class="font-semibold"
        >sur mesure</span
      > pour propulser votre entreprise vers l'avenir.
    </Fragment>
  </Hero>
</Layout>
